{
  "workbench.preview.colorTheme": "dracula",
  "workbench.preview.imageWidth": 60,
  "workbench.preview.defaultMode": "preview",
  "workbench.reduceAnimation": true,
  "workbench.styles": {
    "config": {
      "Button": {
        "chars": {
          "delimiter": [" ", " "]
        },
        "styles": {
          "highlight": "[button--highlight]{item}",
          "label": "[@#4c566a button]{item}"
        }
      },
      "Container": {
        "chars": {
          "border": ["│ ", "─", " │", "─"],
          "corner": ["╭", "╮", "╯", "╰"]
        },
        "styles": {
          "border": "[nord5]{item}",
          "corner": "[nord5]{item}"
        }
      },
      "InputField": {
        "styles": {
          "cursor": "[nord13 inverse]{item}",
          "value": "[nord8]{item}"
        }
      },
      "Label": {
        "styles": {
          "value": "[body]{item}"
        }
      },
      "Splitter": {
        "chars": {
          "separator": " "
        }
      },
      "Window": {
        "chars": {
          "border": ["│ ", "─", " │", "─"],
          "corner": ["╭", "╮", "╯", "╰"]
        },
        "styles": {
          "border": "[window__border]{item}",
          "corner": "[window__border]{item}"
        }
      }
    },
    "markup": {
      "body": "nord4",
      "button": "nord15 bold",
      "button--highlight": "@#b48ead nord4 bold",
      "nord0": "#2e3440",
      "nord1": "#3b4252",
      "nord2": "#434c5e",
      "nord3": "#4c566a",
      "nord4": "#d8dee9",
      "nord5": "#e5e9f0",
      "nord6": "#eceff4",
      "nord7": "#8fbcbb",
      "nord8": "#88c0d0",
      "nord9": "#81a1c1",
      "nord10": "#5e81ac",
      "nord11": "#bf616a",
      "nord12": "#d08770",
      "nord13": "#ebcb8b",
      "nord14": "#a3be8c",
      "nord15": "#b48ead",
      "window__border": "nord10",
      "window__border--error": "nord11",
      "window__border--success": "nord14",
      "window__border--warning": "nord13",
      "window__corner--error": "nord11",
      "window__corner--success": "nord14",
      "window__corner--warning": "nord13",
      "window__title": "nord14 bold",
      "window__title--error": "nord11 bold",
      "window__title--success": "nord14 bold",
      "window__title--warning": "nord13 bold"
    }
  }
}
